#!groovy

properties([disableConcurrentBuilds()])

pipeline{
	agent {
		label 'master'
	}
	triggers {pollSCM('* * * * *')}
	options {
		buildDiscarder(logRotator(numToKeepStr:'10',artifactNumToKeepStr:'10'))
		timestamps()
	}
	stages {
		stage('build'){
			steps {
				script{
					sh "cd ~"
					def existsDirectory = sh(returnStatus: true, script: '[[ -d LyskovoChat]] && echo "ok"')
					if(existsDirectory != 0){
						sh 'cd LyskovoChat'
						sh 'git pull origin main'
					}else{
						sh 'git clone git@github.com:MrJekso/LyskovoChat.git'
					}
				}
			}
		}
	}
}
