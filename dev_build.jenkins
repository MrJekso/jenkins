#!groovy

properties([disableConcurrentBuilds()])

pipeline{
	agent {
		label 'master'
	}
	triggers {pollSCM('* * * * *')}
	options {
		buildDiscarder(logRotator(numToKeepStr:'10',artifactNumToKeepStr:'10'))
		timestamps()
	}
	stages {
		stage('build'){
			steps {
				script{
					sh('git clone git@github.com:MrJekso/LyskovoChat.git')
					sh('cd LyskovoChat')
					sh('git checkout friends')
					sh('cd friedns')
					sh("docker build . -t sonicsmall/friend:${BUILD_ID}.${BUILD_ID}.${BUILD_ID}")
					echo "NUMBER BUILD:::: ${env.BUILD_ID}"
				}
			}
		}
	}
	post{
		always {
			cleanWs ()
		}
	}
	
}
