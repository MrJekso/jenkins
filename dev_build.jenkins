#!groovy

properties([disableConcurrentBuilds()])

pipeline{
	agent {
		label 'master'
	}
	triggers {pollSCM('* * * * *')}
	options {
		buildDiscarder(logRotator(numToKeepStr:'10',artifactNumToKeepStr:'10'))
		timestamps()
	}
	stages {
		stage('build'){
			steps {
				script{
					def existsDirectory = sh(returnStatus: true, script: 'ls | grep LyskovoChat')
					if(existsDirectory == true){
						sh 'cd LyskovoChat'
						sh 'git pull origin main'
					}else{
						sh 'git clone git@github.com:MrJekso/LyskovoChat.git'
					}
				}
			}
		}
	}
}
